<h1 style="text-align: center; color: blue" >Update your profile </h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: @user %>

      <%= f.label :name, t("sessions.new.name") %>
      <%= f.text_field :name, class: "form-control"%>

      <%= f.label :email, t("sessions.new.email") %>
      <%= f.email_field :email, class: "form-control"%>

      <%= f.label :password, t("sessions.new.password") %>
      <%= f.password_field :password, class: "form-control"%>

      <%= f.label :password_confirmation, t("sessions.new.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <br>
      <%= f.submit %>
    <% end %>
  </div>
</div>

